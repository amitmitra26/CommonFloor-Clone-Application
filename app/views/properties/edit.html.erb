<% provide(:title, 'Modify Add') %>
<% provide(:button_text, 'Save changes') %>

<h1>Update your Add</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for (@property) do |f| %>

    <p>
      <%= f.label :status %>
      <% if @property.owner_type =="I need a Property" %>
        <%= f.select(:status, ['Needed','Got Property','Not needed Anymore']) %>
      <% else %>
        <% if @property.info == "For Sale" %>
          <%= f.select(:status, ['Available','Sold']) %>
        <% else %>
          <%= f.select(:status, ['Available','Rented']) %>
        <% end %>
      <% end %>
    </p>

    <%= render 'shared/error_messages', obj: @property %>



    <p>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label(:rooms, '1RK') %>
      <%= f.radio_button(:rooms, '1RK') %>
      <%= f.label(:rooms, '1BHK') %>
        <%= f.radio_button(:rooms, '1BHK') %>
      <%= f.label(:rooms, '2BHK') %>
        <%= f.radio_button(:rooms, '2BHK') %>
      <%= f.label(:rooms, '3BHK') %>
        <%= f.radio_button(:rooms, '3BHK') %>
      <%= f.label(:rooms, '4BHK') %>
        <%= f.radio_button(:rooms, '4BHK') %>
      <%= f.label(:rooms, '4BHK+') %>
        <%= f.radio_button(:rooms, '4BHK+') %>
    </p>
    <p> <%= f.label :bedrooms %>
        <%= f.select(:bedrooms, ['1','2','3','4','5','6+']) %>
    </p>
    <p> <%= f.label :bathrooms %>
        <%= f.select(:bathrooms, ['1','2','3','4+']) %>
    </p>
    <p>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.label :category %>
      <%= f.select(:category, ['Apartment','Hotel','Plot','Bunglow','House','Office']) %>
    </p>
    <p>
    <%= f.label :city %>
    <%= f.text_field :city %>
    </p>

    <p>
      <%= f.label :location %>
      <%= f.text_field :location %>
    </p>

    <p>
      <%= f.label :price %>
      <%= f.text_field :price %>
    </p>

    <p>
      <%= f.label :area %>
      <%= f.text_field :area %>
    </p>
    <p>
      <%= f.label :owner %>
      <%= f.text_field :owner %>
    </p>
    <p>
      <%= f.label :contact %>
      <%= f.text_field :contact %>
    </p>

    <%= f.submit %>

    <% end %>


  </div>
</div>
